<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.game.boggle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--make the welcome screen as a splash screen-->
        <activity
            android:name=".Welcome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TitleScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".OnePlayer"
            android:label="@string/title_activity_one_player"
            android:parentActivityName=".TitleScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.game.boggle.TitleScreen" />
        </activity>
        <activity
            android:name=".TwoPlayer"
            android:label="@string/title_activity_two_player"
            android:parentActivityName=".TitleScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.game.boggle.TitleScreen" />
        </activity>
        <activity
            android:name=".Highscores"
            android:label="@string/title_activity_highscores"
            android:parentActivityName=".TitleScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.game.boggle.TitleScreen" />
        </activity>
    </application>

</manifest>
